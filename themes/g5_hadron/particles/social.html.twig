{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	{% if particle.title %}<h2 class="g-title">{{ particle.title|raw }}</h2>{% endif %}
    <div class="rt-social-buttons {{ particle.css.class }}">
        {% for item in particle.items %}
            <a class="social-button {{ item.class|e }}" target="{{ particle.target|default('_blank')|e }}" href="{{ item.link|e }}" title="{{ item.text|e }}">
                <span class="{{ item.icon|e }}"></span>
                <span class="social-button-text">{{ item.text|e }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}
